<Window x:Class="PipMyWindow.PiPOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="100"
        Height="30"
        Topmost="True"
        ShowInTaskbar="False">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <!-- Drag Button -->
            <Button x:Name="DragButton"
                    Width="30"
                    Height="30"
                    Background="Black"
                    Opacity="0.3"
                    Margin="0,0,3,0"
                    PreviewMouseLeftButtonDown="DragButton_PreviewMouseLeftButtonDown"
                    PreviewMouseMove="DragButton_PreviewMouseMove"
                    PreviewMouseLeftButtonUp="DragButton_PreviewMouseLeftButtonUp">
                <iconPacks:PackIconFontAwesome Width="15" Height="15" Kind="ArrowsUpDownLeftRightSolid" />
            </Button>

            <!-- Exit Button -->
            <Button Width="30"
                    Height="30"
                    Background="Black"
                    Opacity="0.3"
                    Margin="0,0,3,0"
                    Click="ExitButton_Click">
                <iconPacks:PackIconMaterial Width="15" Height="15" Kind="ExitToApp" />
            </Button>
        </StackPanel>
    </Grid>
</Window>