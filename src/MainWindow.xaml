<mah:MetroWindow x:Class="PipMyWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="PIP My Window"
        MinHeight="300"
        MinWidth="400"
        Height="450"
        Width="800"
        FontFamily="Segoe UI"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Click="LaunchBrowserGitHubPipMyWindow" ToolTip="Open up the GitHub repo">
                <iconPacks:PackIconFontAwesome Width="22" Height="22" Kind="GithubBrands" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Click="CheckForUpdates" Content="Check for updates">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="22" Height="22" VerticalAlignment="Center" Kind="Update" />
                            <TextBlock Margin="4 0 0 0" VerticalAlignment="Center" Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <StackPanel x:Name="ControlPanel"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,10,0,10">
            <TextBlock Text="Window Selection"
                       FontSize="16"
                       Margin="0,0,0,10"
                       Foreground="#d3d3d3"
                       HorizontalAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ComboBox x:Name="ProcessListComboBox"
                          Width="300"
                          mah:ControlsHelper.CornerRadius="4"
                          BorderBrush="White"
                          Margin="0,0,-2.5,0"
                          DisplayMemberPath="Item2"
                          SelectedValuePath="Item1" />

                <Button Click="ListRunningProcesses"
                        ToolTip="Refresh running process list."
                        BorderBrush="White"
                        Margin="-2.5,0,0,0">
                    <iconPacks:PackIconMaterial Width="22" Height="22" Kind="Refresh" />
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Start Button -->
        <Button x:Name="StartButton"
                Grid.Row="2"
                Content="Start PIP"
                Width="150"
                HorizontalAlignment="Center"
                Margin="0,10,0,10"
                Click="StartButton_Click" />

        <!-- Placeholder for captured content -->
        <Border x:Name="PipContent"
                Background="Black"
                Visibility="Collapsed"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.RowSpan="3" />
    </Grid>
</mah:MetroWindow>